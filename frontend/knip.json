{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "entry": [
    "src/app/**/page.tsx",
    "src/app/**/layout.tsx",
    "src/app/**/route.ts",
    "src/app/**/loading.tsx",
    "src/app/**/error.tsx",
    "src/middleware.ts"
  ],
  "project": ["src/**/*.{ts,tsx}"],
  "ignore": [
    "src/app/**/page.tsx",
    "src/app/**/layout.tsx",
    "src/app/**/route.ts",
    "src/app/**/loading.tsx"
  ],
  "ignoreDependencies": [
    "@tailwindcss/postcss",
    "sharp"
  ]
}
