# FWT Dashboard Environment Configuration
# Copy this file to .env and configure with your actual values

# ============================================================================
# SECURITY SETTINGS (CRITICAL)
# ============================================================================

# Basic Authentication (CHANGE THESE IN PRODUCTION!)
BASIC_AUTH_USER=admin
BASIC_AUTH_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_NOW

# Environment (development, staging, production)
ENVIRONMENT=development

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ============================================================================
# DATABASE CONFIGURATION (OPTIONAL)
# ============================================================================

# Supabase Configuration (for authentication & data)
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# Frontend Supabase Configuration (same as above)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================================================
# API CONFIGURATION
# ============================================================================

# Frontend API URL (for production deployment and testing)
NEXT_PUBLIC_API_URL=https://your-api-domain.com

# Production frontend URL for testing and diagnostics
PRODUCTION_FRONTEND_URL=https://your-production-frontend-domain.com

# ============================================================================
# MONITORING & LOGGING (OPTIONAL)
# ============================================================================

# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn-here

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Grafana admin password for monitoring dashboard
GRAFANA_ADMIN_PASSWORD=

# ============================================================================
# PRODUCTION OPTIMIZATIONS
# ============================================================================

# Workers for production server
WORKERS=4

# Maximum connections
MAX_CONNECTIONS=1000

# Request timeout (seconds)
REQUEST_TIMEOUT=30