{
  "version": 2,
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/next" }
  ],
  "installCommand": "cd frontend && npm ci --no-audit --no-fund",
  "buildCommand": "cd frontend && npm run build",
  "ignoreCommand": "echo 'Ignoring root backend files for Vercel build'",
  "routes": [
    { "src": "/(.*)", "dest": "/$1" }
  ]
}


